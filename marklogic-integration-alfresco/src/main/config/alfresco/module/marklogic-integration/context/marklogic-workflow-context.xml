<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>

    <bean id="marklogic.workflowBootstrap" parent="workflowDeployer">
        <property name="workflowDefinitions">
            <list>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/marklogic-integration/workflow/review-publish.activiti.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">false</prop>           
                </props>
            </list>
        </property>
        <property name="models">
            <list>
                <value>alfresco/module/marklogic-integration/model/marklogicWorkflowModel.xml</value>
            </list>
        </property>
        <property name="labels">
            <list>
                <value>alfresco.module.marklogic-integration.messages.marklogicWorkflow</value>
            </list>
        </property>
    </bean>

</beans>